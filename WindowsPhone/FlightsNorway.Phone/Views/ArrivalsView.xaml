<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:ViewModels="clr-namespace:FlightsNorway.ViewModels"
    x:Class="FlightsNorway.Views.ArrivalsView"
    mc:Ignorable="d"
    d:DesignHeight="600" 
	d:DesignWidth="480">
    
	<UserControl.Resources>
        <ViewModels:StringFormatValueConverter x:Key="StringFormatValueConverter"/>
		<DataTemplate x:Key="ArrivalItemTemplate">
			<Grid Height="55" VerticalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="83"/>
					<ColumnDefinition Width="81"/>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition Width="135"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<TextBlock Margin="0" TextWrapping="Wrap" Text="{Binding FlightId}" Style="{StaticResource TimeTableContent}" FontFamily="{StaticResource PhoneFontFamilyLight}" FontSize="{StaticResource PhoneFontSizeMedium}" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="1" TextWrapping="Wrap" Text="{Binding ScheduledTime, ConverterParameter=HH:mm, Converter={StaticResource StringFormatValueConverter}}" Style="{StaticResource TimeTableContent}" FontFamily="{StaticResource PhoneFontFamilyLight}" FontSize="{StaticResource PhoneFontSizeMedium}" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="3" Margin="0" TextWrapping="Wrap" Text="{Binding Airport.Name, Converter={StaticResource StringFormatValueConverter}}" Style="{StaticResource TimeTableContent}" FontFamily="{StaticResource PhoneFontFamilyLight}" FontSize="{StaticResource PhoneFontSizeMedium}" VerticalAlignment="Center" />
				<TextBlock Grid.Column="2" Margin="0" TextWrapping="Wrap" Text="{Binding Belt, Converter={StaticResource StringFormatValueConverter}}" Style="{StaticResource TimeTableContent}" HorizontalAlignment="Left" FontFamily="{StaticResource PhoneFontFamilyLight}" FontSize="{StaticResource PhoneFontSizeMedium}" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="4" Margin="0,0,0,1" TextWrapping="Wrap" Text="{Binding FlightStatus.Status.StatusTextEnglish, Converter={StaticResource StringFormatValueConverter}}" Style="{StaticResource TimeTableContent}" FontFamily="{StaticResource PhoneFontFamilyLight}" FontSize="{StaticResource PhoneFontSizeMedium}" VerticalAlignment="Center" />
			</Grid>
		</DataTemplate>
	</UserControl.Resources>

    <UserControl.DataContext>
        <Binding Path="FlightsViewModel" Source="{StaticResource ViewModelLocator}" />
    </UserControl.DataContext>

    <Grid x:Name="LayoutRoot">
        <ListBox 
            Margin="0,36,0,0"
            ItemsSource="{Binding Arrivals}" 
            ItemTemplate="{StaticResource ArrivalItemTemplate}" 
            DataContext="{Binding}" 
            ItemContainerStyle="{StaticResource ListBoxItemStyle}" />
        <Grid Height="36" VerticalAlignment="Top" Margin="0">
        	<Grid.ColumnDefinitions>
        		<ColumnDefinition Width="87"/>
        		<ColumnDefinition Width="53"/>
        		<ColumnDefinition Width="65"/>
        		<ColumnDefinition Width="134"/>
        		<ColumnDefinition/>
        	</Grid.ColumnDefinitions>
        	<TextBlock Margin="0" TextWrapping="Wrap" Text="flight" Style="{StaticResource TimeTableHeading}" FontSize="{StaticResource PhoneFontSizeMediumLarge}" FontFamily="{StaticResource PhoneFontFamilyNormal}"/>
        	<TextBlock TextWrapping="Wrap" Text="time" Style="{StaticResource TimeTableHeading}" Grid.Column="1" FontSize="{StaticResource PhoneFontSizeMediumLarge}" FontFamily="{StaticResource PhoneFontFamilyNormal}"/>
        	<TextBlock Margin="0" TextWrapping="Wrap" Text="belt" Style="{StaticResource TimeTableHeading}" Grid.Column="2" FontSize="{StaticResource PhoneFontSizeMediumLarge}" FontFamily="{StaticResource PhoneFontFamilyNormal}"/>
        	<TextBlock Margin="0" TextWrapping="Wrap" Text="from" Style="{StaticResource TimeTableHeading}" Grid.Column="3" FontSize="{StaticResource PhoneFontSizeMediumLarge}" FontFamily="{StaticResource PhoneFontFamilyNormal}"/>
        	<TextBlock Margin="0" TextWrapping="Wrap" Text="status" Style="{StaticResource TimeTableHeading}" Grid.Column="4" FontSize="{StaticResource PhoneFontSizeMediumLarge}" FontFamily="{StaticResource PhoneFontFamilyNormal}"/>
        </Grid>
    </Grid>
</UserControl>
